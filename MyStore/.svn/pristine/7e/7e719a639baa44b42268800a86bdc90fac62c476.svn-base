<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%@ taglib tagdir="/WEB-INF/tags/admin" prefix="my"%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>

<title>My JSP 'addnewgoods.jsp' starting page</title>

<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->

<link rel="stylesheet" type="text/css"
	href="/${projectName}/css/admin/main.css">
</head>

<body>
	<div class="whole">
		<input type="hidden" value="${projectName}" id="projectName">
		<my:toptag></my:toptag>
		<div style="width:1024px; height:618px;">
			<div class="left">
				<my:lefttag></my:lefttag>
			</div>
			<div class="right">
				<div class="main_a">
					<h3>添加新商品</h3>
					<hr />
					<form id="form_add" name="form_add" method="post" action="goodsimages.jsp">

						<table align="center">
							<tr>
								<td id="t1">商品名称：</td>
								<td><input id="goodsname" name="goodsname" type="text" />
								</td>
								<td id="goodsnameTd" color="red"></td>
							</tr>
							<tr>
								<td>商品类别：</td>
								<td><select>
										<option>服装内衣</option>
										<option>鞋包配饰</option>
										<option>运动户外</option>
								</select>
								</td>
								<td></td>
							</tr>
							<tr>
								<td>单价：</td>
								<td><input type="text" placeholder="元" />
								</td>
								<td></td>
							</tr>
							<tr>
								<td>是否上架：</td>
								<td class="radio"><input type="radio" />允许<input
									type="radio" />不允许</td>
								<td></td>
							</tr>
							<tr>
								<td>商品净重：</td>
								<td><input type="text" placeholder="克" />
								</td>
								<td></td>
							</tr>
							<tr>
								<td>商品简介：</td>
								<td><textarea></textarea>
								</td>
								<td></td>
							</tr>
							<!--<tr>
								<td>上传图片：</td>
								<td><input type="file" name="file" style="width:170px;" />
								</td>
								<td></td>
							</tr>-->
							<tr>
								<td></td>
								<td><input type="submit" value="下一步" />
								</td>
								<td></td>
							</tr>
						</table>
					</form>
				</div>
			</div>
		</div>
		<my:bottomtag></my:bottomtag>
	</div>

</body>
</html>
